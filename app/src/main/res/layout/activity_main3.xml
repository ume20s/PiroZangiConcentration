                android:layout_weight="1"
                android:background="@color/LightPirosOrange"
                android:contentDescription="@string/txtCard"
                android:scaleType="fitCenter"
                android:padding="2dp"
                app:srcCompat="@drawable/card" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/ImgBtn3_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/LightPirosOrange"
                android:contentDescription="@string/txtCard"
                android:scaleType="fitCenter"
                android:padding="2dp"
                app:srcCompat="@drawable/card" />

            <ImageButton
